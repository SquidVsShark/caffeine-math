

Core::World world;


class Renderer
{
public:

  draw();

};


int
main()
{
  auto world    = Core::World();
  auto window   = Core::Window(800, 600);
  auto renderer = Core::Renderer();

  auto entity = world.create_entity();

  while(window)
  {
    world.think();
    renderer.draw();
  }

  return 0;
}
